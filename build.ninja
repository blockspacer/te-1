cxxflags = -g -Wall -Werror -std=c++17
cxxincludes = -I. -Ideps/glm-0.9.8.5 -Ideps/glfw-3.2.1/include -Ideps/glad/include
cxxlibs = -lFreeImage -Ldeps/glfw-3.2.1/build/src -lglfw3 -lgdi32 -lopengl32

rule cxx
  command = g++ $cxxflags $cxxincludes -c $in -o $out

rule link
  command = g++ $in $cxxlibs -o $out

build obj/main.o: cxx main.cpp
build obj/glad.o: cxx deps/glad/src/glad.c

build a.exe: link obj/main.o obj/glad.o
